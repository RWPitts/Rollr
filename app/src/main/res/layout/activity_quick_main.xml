<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.zeroscifer.rollr.quickMain"
    android:background="#ff282828">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonTextD2"
        android:id="@+id/buttonD2"
        android:layout_above="@+id/buttonD12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="42dp"
        android:onClick="toastView"
        android:nestedScrollingEnabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonTextD4"
        android:id="@+id/buttonD4"
        android:layout_alignTop="@+id/buttonD2"
        android:layout_centerHorizontal="true"
        android:onClick="toastView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonTextD6"
        android:id="@+id/buttonD6"
        android:layout_alignTop="@+id/buttonD4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="toastView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonTextD12"
        android:id="@+id/buttonD12"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/buttonD4"
        android:layout_toStartOf="@+id/buttonD4"
        android:layout_marginBottom="91dp"
        android:onClick="toastView" />

   Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonTextD20"
        android:id="@+id/buttonD20"
        android:layout_alignTop="@+id/buttonD12"
        android:layout_toRightOf="@+id/buttonD4"
        android:layout_toEndOf="@+id/buttonD4"
        android:onClick="toastView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/textViewQuickRoll"
        android:id="@+id/textViewQuickRoll"
        android:layout_alignParentTop="true"
        android:layout_marginTop="56dp"
        android:textColor="#ffffffff"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBack"
        android:onClick="onClickMain"
        android:singleLine="true"
        android:text="@string/textButtonMainMenu"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/d20"
        android:background="@null"
        android:onClick="toastView"
        android:layout_below="@+id/buttonD2"
        android:layout_toRightOf="@+id/buttonD4"
        android:layout_toEndOf="@+id/buttonD4" />

</RelativeLayout>
