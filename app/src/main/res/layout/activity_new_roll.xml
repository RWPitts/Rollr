<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.zeroscifer.rollr.NewRoll">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonTextD2"
        android:id="@+id/buttonD2"
        android:src="@drawable/d2"
        android:background="@null"
        android:onClick="onClickMain"
        android:layout_alignBottom="@+id/buttonD4"
        android:layout_marginLeft="15dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonTextD4"
        android:id="@+id/buttonD4"
        android:src="@drawable/d4"
        android:background="@null"
        android:onClick="onClickMain"
        android:layout_below="@+id/textViewQuickRoll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonTextD6"
        android:id="@+id/buttonD6"
        android:src="@drawable/d6"
        android:background="@null"
        android:onClick="onClickMain"
        android:layout_alignBottom="@+id/buttonD4"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonTextD12"
        android:id="@+id/buttonD12"
        android:src="@drawable/d12"
        android:background="@null"
        android:onClick="onClickMain"
        android:layout_above="@+id/numberPicker2"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/textAddRoll"
        android:id="@+id/textViewQuickRoll"
        android:textSize="35sp"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBack"
        android:onClick="back"
        android:singleLine="true"
        android:text="@string/textButtonMainMenu"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:width="100sp"
        android:textSize="15sp"
        android:src="@drawable/mainmenu"
        android:background="@null"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonD20"
        android:src="@drawable/d20"
        android:background="@null"
        android:onClick="onClickMain"
        android:layout_alignBottom="@+id/buttonD12"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonD10"
        android:src="@drawable/d10b"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/buttonD2"
        android:layout_alignStart="@+id/buttonD2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/textd20"
        android:id="@+id/textD20"
        android:layout_alignRight="@+id/buttonD20"
        android:layout_marginRight="15dp"
        android:layout_alignBottom="@+id/buttonD12" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rollName"
        android:layout_alignTop="@+id/textViewQuickRoll"
        android:layout_alignRight="@+id/buttonD6"
        android:width="150dp" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker"
        android:layout_below="@+id/buttonD2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker2"
        android:layout_below="@+id/buttonD10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker3"
        android:layout_below="@+id/buttonD4"
        android:layout_centerHorizontal="true" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker4"
        android:layout_below="@+id/buttonD6"
        android:layout_alignParentRight="true" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker5"
        android:layout_below="@+id/buttonD12"
        android:layout_centerHorizontal="true" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker6"
        android:layout_below="@+id/buttonD20"
        android:layout_alignParentRight="true" />

</RelativeLayout>
