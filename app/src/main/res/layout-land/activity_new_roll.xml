<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.zeroscifer.rollr.NewRoll"
    android:background="#662233"
    android:clickable="true">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonTextD2"
        android:id="@+id/buttonD2"
        android:src="@drawable/d2"
        android:background="@null"
        android:onClick=""
        android:layout_alignTop="@+id/buttonD4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonTextD4"
        android:id="@+id/buttonD4"
        android:src="@drawable/d4"
        android:background="@null"
        android:onClick=""
        android:layout_above="@+id/buttonD2Plus"
        android:layout_toRightOf="@+id/buttonD2"
        android:layout_toEndOf="@+id/buttonD2"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonTextD12"
        android:id="@+id/buttonD12"
        android:src="@drawable/d12"
        android:background="@null"
        android:onClick=""
        android:layout_alignTop="@+id/buttonD20"
        android:layout_toRightOf="@+id/textViewD10"
        android:layout_toEndOf="@+id/textViewD10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/textAddRoll"
        android:id="@+id/textViewQuickRoll"
        android:textSize="35sp"
        android:textColor="#ffffffff"
        android:layout_alignBottom="@+id/buttonD20"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonOk"
        android:onClick="addRoll"
        android:singleLine="true"
        android:text="@string/textButtonMainAdd"
        android:width="100sp"
        android:textSize="15sp"
        android:src="@drawable/save"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonD20"
        android:src="@drawable/d20"
        android:background="@null"
        android:onClick=""
        android:layout_alignLeft="@+id/buttonOk"
        android:layout_alignStart="@+id/buttonOk"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_alignTop="@+id/rollName" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonD10"
        android:src="@drawable/d10b"
        android:background="@null"
        android:layout_alignTop="@+id/imageButton"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rollName"
        android:width="150dp"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ButtonPlus"
        android:id="@+id/buttonD2Plus"
        android:onClick="D2Plus"
        android:src="@drawable/plus"
        android:background="@null"
        android:layout_above="@+id/textViewD2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/textViewD2"
        android:textSize="35dp"
        android:textColor="#ffffffff"
        android:layout_above="@+id/buttonD2Minus"
        android:layout_alignRight="@+id/buttonD2Plus"
        android:layout_alignEnd="@+id/buttonD2Plus" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ButtonMinus"
        android:id="@+id/buttonD2Minus"
        android:onClick="D2Minus"
        android:src="@drawable/minus"
        android:background="@null"
        android:layout_alignTop="@+id/buttonOk"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ButtonPlus"
        android:id="@+id/buttonD10Plus"
        android:onClick="D10Plus"
        android:src="@drawable/plus"
        android:background="@null"
        android:layout_alignTop="@+id/buttonD6Plus"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/textViewD10"
        android:textSize="35dp"
        android:textColor="#ffffffff"
        android:layout_above="@+id/buttonD10Minus"
        android:layout_alignRight="@+id/buttonD10Minus"
        android:layout_alignEnd="@+id/buttonD10Minus" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ButtonMinus"
        android:id="@+id/buttonD10Minus"
        android:onClick="D10Minus"
        android:src="@drawable/minus"
        android:background="@null"
        android:layout_alignTop="@+id/buttonD6Minus"
        android:layout_alignRight="@+id/buttonD10"
        android:layout_alignEnd="@+id/buttonD10" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ButtonPlus"
        android:id="@+id/buttonD4Plus"
        android:onClick="D4Plus"
        android:src="@drawable/plus"
        android:background="@null"
        android:layout_above="@+id/textViewD4"
        android:layout_alignLeft="@+id/buttonD4"
        android:layout_alignStart="@+id/buttonD4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/textViewD4"
        android:textSize="35dp"
        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/textViewD6"
        android:layout_alignRight="@+id/buttonD4Plus"
        android:layout_alignEnd="@+id/buttonD4Plus" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ButtonMinus"
        android:id="@+id/buttonD4Minus"
        android:onClick="D4Minus"
        android:src="@drawable/minus"
        android:background="@null"
        android:layout_below="@+id/textViewD2"
        android:layout_alignRight="@+id/buttonD4"
        android:layout_alignEnd="@+id/buttonD4" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ButtonPlus"
        android:id="@+id/buttonD6Plus"
        android:onClick="D6Plus"
        android:src="@drawable/plus"
        android:background="@null"
        android:layout_alignTop="@+id/buttonD4Plus"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/textViewD6"
        android:textSize="35dp"
        android:textColor="#ffffffff"
        android:layout_above="@+id/buttonD6Minus"
        android:layout_alignRight="@+id/buttonD6Minus"
        android:layout_alignEnd="@+id/buttonD6Minus" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ButtonMinus"
        android:id="@+id/buttonD6Minus"
        android:onClick="D6Minus"
        android:src="@drawable/minus"
        android:background="@null"
        android:layout_alignTop="@+id/buttonD4Minus"
        android:layout_toLeftOf="@+id/rollName"
        android:layout_toStartOf="@+id/rollName" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ButtonPlus"
        android:id="@+id/buttonD12Plus"
        android:onClick="D12Plus"
        android:src="@drawable/plus"
        android:background="@null"
        android:layout_above="@+id/textView"
        android:layout_toRightOf="@+id/rollName"
        android:layout_toEndOf="@+id/rollName" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ButtonMinus"
        android:id="@+id/buttonD12Minus"
        android:onClick="D12Minus"
        android:src="@drawable/minus"
        android:background="@null"
        android:layout_alignTop="@+id/buttonD10Minus"
        android:layout_toRightOf="@+id/buttonD12"
        android:layout_toEndOf="@+id/buttonD12" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ButtonPlus"
        android:id="@+id/buttonD20Plus"
        android:onClick="D20Plus"
        android:src="@drawable/plus"
        android:background="@null"
        android:layout_alignTop="@+id/buttonD12Plus"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/textViewD20"
        android:textSize="35dp"
        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/textViewD10"
        android:layout_alignRight="@+id/buttonD12Minus"
        android:layout_alignEnd="@+id/buttonD12Minus" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ButtonMinus"
        android:id="@+id/buttonD20Minus"
        android:onClick="D20Minus"
        android:src="@drawable/minus"
        android:background="@null"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/buttonD20"
        android:layout_toEndOf="@+id/buttonD20" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonTextD6"
        android:id="@+id/imageButton"
        android:src="@drawable/d6"
        android:background="@null"
        android:onClick=""
        android:layout_alignTop="@+id/buttonD4"
        android:layout_toRightOf="@+id/textViewQuickRoll"
        android:layout_toEndOf="@+id/textViewQuickRoll" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/textView"
        android:textSize="35dp"
        android:textColor="#ffffffff"
        android:layout_below="@+id/buttonD6Plus"
        android:layout_alignRight="@+id/buttonD20Minus"
        android:layout_alignEnd="@+id/buttonD20Minus" />

</RelativeLayout>
